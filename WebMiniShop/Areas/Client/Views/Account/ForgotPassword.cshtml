@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<h2>Quên Mật Khẩu</h2>

<!-- Form yêu cầu gửi OTP -->
<form asp-action="SendOtp" method="post">
    <div class="form-group">
        <label for="email">Nhập Email để nhận OTP:</label>
        <input type="email" name="email" class="form-control" id="email" required />
    </div>
    <button type="submit" class="btn btn-primary">Gửi OTP</button>
</form>

<!-- Form xác nhận OTP và đặt lại mật khẩu -->
<form asp-action="VerifyOtp" method="post" style="margin-top: 20px;">
    <div class="form-group">
        <label for="emailOtp">Email:</label>
        <input type="email" name="email" class="form-control" id="emailOtp" required />
    </div>
    <div class="form-group">
        <label for="otp">Mã OTP:</label>
        <input type="text" name="otp" class="form-control" id="otp" required />
    </div>
    <button type="submit" class="btn btn-success">Xác minh OTP</button>
</form>

<!-- Form đặt lại mật khẩu mới -->
<form asp-action="ResetPassword" method="post" style="margin-top: 20px;">
    <div class="form-group">
        <label for="resetEmail">Email:</label>
        <input type="email" name="email" class="form-control" id="resetEmail" required />
    </div>
    <div class="form-group">
        <label for="newPassword">Mật khẩu mới:</label>
        <input type="password" name="newPassword" class="form-control" id="newPassword" required />
    </div>
    <button type="submit" class="btn btn-warning">Đặt lại mật khẩu</button>
</form>
