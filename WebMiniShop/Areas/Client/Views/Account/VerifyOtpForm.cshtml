
@{
    ViewData["Title"] = "Xác Nhận OTP";
}


            <form asp-action="VerifyOtp" method="post">
                <span class="login100-form-title">Enter OTP</span>

                <div class="wrap-input100 validate-input" data-validate="OTP is required">
                    <input class="input100" type="text" name="otp" placeholder="Enter OTP" required />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-key" aria-hidden="true"></i></span>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">Verify OTP</button>
                </div>

                <div class="text-center p-t-136">
                    <a href="@Url.Action("Login", "Account")" class="txt2">Cancel</a>
                </div>
            </form>
        
