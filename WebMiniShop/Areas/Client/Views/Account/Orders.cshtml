@model IEnumerable<Domain.Entities.HoaDon>
<div class="container-fluid page-header py-5 bg-primary">
    <h1 class="text-center text-white display-6">User Info</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item">
            <a class="text-white" asp-controller="Home">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a class="text-white" asp-controller="Page">User</a>
        </li>
        <li class="breadcrumb-item active text-white">Đơn Hàng</li>
    </ol>
</div>
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Your Orders</h3>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p>You have no orders.</p>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>Delivery Address</th>
                            <th>Status</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.MaHD</td>
                                <td>@order.NgayDat.ToString("dd/MM/yyyy")</td>
                                <td>@order.DiaChiGiao</td>
                                <td>@order.TrangThai?.TenTrangThai</td>
                                <td>@order.GhiChu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>