@model WebMiniShop.Models.UserInfoVM

<div class="container-fluid page-header py-5 bg-primary">
    <h1 class="text-center text-white display-6">User Info</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item">
            <a class="text-white" asp-controller="Home">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a class="text-white" asp-controller="Page">Pages</a>
        </li>
        <li class="breadcrumb-item active text-white">User Info</li>
    </ol>
</div>

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">User Information</h3>
        </div>
        <div class="card-body">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <a class="btn btn-primary" asp-controller="Account" asp-action="EditInfo">Edit</a>
        </div>
    </div>
</div>