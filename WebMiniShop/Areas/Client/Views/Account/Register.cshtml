@model Domain.Entities.User

@{
    ViewData["Title"] = "Đăng Ký";
}
<link rel="stylesheet" href="~/wwwroot/css/login.css" />
<link rel="stylesheet" href="~/wwwroot/css/style.css" />


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <!-- Hình ảnh bên trái -->
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/image/login-img.png" alt="IMG">
            </div>

            <!-- Form Register -->
            <form asp-action="Register" method="post" class="login100-form validate-form active">
                @Html.AntiForgeryToken()
                <span class="login100-form-title">Register</span>

                <div class="wrap-input100 validate-input" data-validate="Họ tên là bắt buộc">
                    <input class="input100" asp-for="HoTen" placeholder="Họ Tên" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-user" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" asp-for="Email" placeholder="Email" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" asp-for="MatKhau" type="password" placeholder="Password" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-lock" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                <div class="wrap-input100 validate-input" data-validate="Confirm password is required">
                    <input class="input100" type="password" name="ConfirmMatKhau" placeholder="Confirm Password" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-lock" aria-hidden="true"></i></span>
                </div>
                <!-- Xử lý xác nhận mật khẩu không cần ValidationMessage vì nó không thuộc User entity -->

                <div class="wrap-input100 validate-input" data-validate="Điện thoại không hợp lệ">
                    <input class="input100" asp-for="DienThoai" placeholder="Điện Thoại" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-phone" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })

                <div class="wrap-input100 validate-input">
                    <select asp-for="VaiTro" class="input100" disabled>
                        <option value="0" selected>Khách hàng</option>
                    </select>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-user-tag" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.VaiTro, "", new { @class = "text-danger" })

                <div class="wrap-input100 validate-input">
                    <select asp-for="GioiTinh" class="input100" required data-validate="Giới tính là bắt buộc">
                        <option value="">Chọn Giới Tính</option>
                        <option value="0">Nữ</option>
                        <option value="1">Nam</option>
                    </select>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-venus-mars" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                <div class="wrap-input100 validate-input">
                    <input class="input100" asp-for="NgaySinh" type="date" placeholder="Ngày Sinh" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })

                <div class="wrap-input100 validate-input">
                    <input class="input100" asp-for="DiaChi" placeholder="Địa Chỉ" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100"><i class="fa fa-map-marker" aria-hidden="true"></i></span>
                </div>
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">Register</button>
                </div>

                <div class="text-center p-t-136">
                    <a class="txt2" asp-action="Login" asp-controller="Account">Already have an account? Log in <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i></a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function showLoginForm() {
            document.getElementById('register-form').style.display = 'none';
            document.getElementById('login-form').style.display = 'block';
            // Ẩn các form khác nếu có
        }

        function showRegisterForm() {
            document.getElementById('login-form').style.display = 'none';
            document.getElementById('register-form').style.display = 'block';
            // Ẩn các form khác nếu có
        }

        // Các hàm JavaScript khác nếu cần
    </script>
}
