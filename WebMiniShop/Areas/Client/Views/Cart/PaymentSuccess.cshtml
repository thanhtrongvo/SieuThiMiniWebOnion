@section Styles {
.success-container {
max-width: 600px;
margin: 50px auto;
padding: 30px;
background: #fff;
border-radius: 15px;
box-shadow: 0 0 20px rgba(0,0,0,0.1);
}

.success-icon {
font-size: 60px;
color: #28a745;
margin-bottom: 20px;
}

.success-heading {
color: #28a745;
font-weight: 600;
margin-bottom: 30px;
}

.order-details {
background: #f8f9fa;
padding: 20px;
border-radius: 10px;
margin: 20px 0;
}

.order-table {
margin-top: 20px;
}

.order-table td {
padding: 15px;
vertical-align: middle;
}

.btn-home {
background: #28a745;
color: white;
padding: 12px 30px;
border-radius: 25px;
border: none;
transition: all 0.3s ease;
}

.btn-home:hover {
background: #218838;
transform: translateY(-2px);
box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
}

.success-message {
color: #6c757d;
font-size: 1.1rem;
margin: 20px 0;
}
}
<div class="container-fluid page-header py-5 bg-primary">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item">
            <a asp-controller="Home">Thanh Toán</a>
        </li>
        <li class="breadcrumb-item active text-white">Thành Công</li>
    </ol>
</div>

<div class="container">
    <div class="success-container text-center">
        <i class="fas fa-check-circle success-icon"></i>
        <h1 class="success-heading">Thanh toán thành công</h1>

        <p class="success-message">
            Cảm ơn bạn, giao dịch của bạn đã được hoàn tất thành công.
        </p>

        <div class="order-details">
            <h4 class="mb-3">Chi tiết đơn hàng</h4>
            <table class="table order-table">
                <tbody>
                    <tr>
                        <td class="text-muted">Thông tin đơn hàng:</td>
                        <td class="font-weight-bold">@Model.OrderId</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Tổng tiền:</td>
                        <td class="font-weight-bold">@Model.TotalPrice.ToString("N0").Replace(",", ".")đ</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Thời gian thanh toán:</td>
                        <td class="font-weight-bold">@Model.PaymentTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Mã giao dịch:</td>
                        <td class="font-weight-bold">@Model.TransactionId</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-home">
                <i class="fas fa-home mr-2"></i>Về trang chủ
            </a>
        </div>
    </div>
</div>
