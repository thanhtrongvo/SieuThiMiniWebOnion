<form name="SearchForm" asp-action="Search" asp-controller="HangHoa">
    <div class="input-group w-100 mx-auto d-flex">
        <input type="search" class="form-control p-3 " placeholder="keyword" aria-describedby="searchButton" name="keyword"
               id="searchText">
        <span id="searchButton" class="input-group-text p-3" onclick="SearchForm.submit()">
            <i class="fa fa-search"></i>
        </span>
    </div>

</form>