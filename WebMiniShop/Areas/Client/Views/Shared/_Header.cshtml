@{
    var isLoggedIn = User.Identity.IsAuthenticated;
}

<!-- Spinner Start -->

<div id="spinner"
    class="show w-100 vh-100 bg-light position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center"
    aria-label="Loading">
    <div class="spinner-grow text-warning" role="status"></div> <!-- Sử dụng màu cam -->
</div>
<!-- Spinner End -->
<!-- Navbar Start -->
<div class="container-fluid fixed-top">
    <div class="container topbar bg-warning d-none d-lg-block">
        <!-- Sử dụng màu cam -->
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
                <small class="me-3">
                    <i class="fas fa-map-marker-alt me-2 text-dark"></i> <a href="/" class="text-dark"
                        title="Visit Us">273 An Dương Vương, P3, Q5, Tp.Hồ Chí Minh</a>
                </small>
                <small class="me-3">
                    <i class="fas fa-envelope me-2 text-dark"></i><a href="/" class="text-dark"
                        title="Send Email">sieuthimini@gmail.com</a>
                </small>
            </div>
            <div class="top-link pe-2">
                <a href="#" class="text-dark"><small class="text-dark mx-2">Chính sách bảo mật</small>/</a>
                <a href="#" class="text-dark"><small class="text-dark mx-2">Điều khoản và điều kiện</small></a>
            </div>
        </div>
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light navbar-expand-xl">
            <a asp-controller="Home" class="navbar-brand" title="Fruitables">
                <h1 class="text-warning display-6">Fruitables</h1>
            </a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-warning"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="/" class="nav-item nav-link">Trang chủ</a>
                    <a asp-controller="HangHoa" class="nav-item nav-link">Sản phẩm</a>
                    <a asp-controller="Contact" class="nav-item nav-link">Liên hệ</a>
                </div>
                <div class="d-flex m-3 me-0">
                    <button class="btn-search btn btn-md-square rounded-circle bg-green me-4"
                        data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="fas fa-search text-light" title="Search"></i>
                    </button>
                    @await Component.InvokeAsync("Cart")
                    @if (isLoggedIn)
                    {
                        <div class="nav-item dropdown">
                            <a class="dropdown-toggle my-auto" href="#" role="button" id="dropdownMenuLink"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user fa-2x"></i>
                            </a>
                            <div class="dropdown-menu m-0 bg-white rounded-0">
                                <a class="dropdown-item"  asp-controller="Account" asp-action="Info">Thông tin người dùng</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Orders">Xem đơn hàng</a>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item">
                                    <button type="submit" class="btn btn-link p-0 m-0 align-baseline">Đăng xuất</button>
                                    @Html.AntiForgeryToken()
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="my-auto">
                            <i class="fas fa-user fa-2x"></i>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->