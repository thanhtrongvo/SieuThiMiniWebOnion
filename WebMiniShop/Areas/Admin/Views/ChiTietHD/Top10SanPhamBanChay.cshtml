@model IEnumerable<Domain.Entities.ChiTietHD>
@{
    ViewData["Title"] = "Top 10 Sản Phẩm Bán Chạy";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<!-- Biểu đồ -->
<canvas id="topSanPhamChart" width="400" height="200"></canvas>

<!-- Thêm Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Gọi API để lấy dữ liệu thống kê
    fetch('@Url.Action("Top10SanPhamBanChay", "ChiTietHD")')
        .then(response => response.json())
        .then(data => {
            console.log(data); // Kiểm tra JSON trả về

            // Lấy dữ liệu từ JSON
            const labels = data.map(item => item.tenHH); // Dùng thuộc tính 'tenHH' cho tên sản phẩm
            const quantities = data.map(item => item.tongSoLuong); // Dùng 'tongSoLuong' cho số lượng bán

            // Tạo biểu đồ
            const ctx = document.getElementById('topSanPhamChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar', // Loại biểu đồ: cột
                data: {
                    labels: labels, // Gắn nhãn trục X bằng tên sản phẩm
                    datasets: [{
                        label: 'Số lượng bán',
                        data: quantities, // Dữ liệu trục Y là số lượng bán
                        backgroundColor: 'rgba(75, 192, 192, 0.2)', // Màu nền cột
                        borderColor: 'rgba(75, 192, 192, 1)', // Màu viền
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            enabled: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true // Trục Y bắt đầu từ 0
                        }
                    }
                }
            });
        })
        .catch(error => console.error('Lỗi khi tải dữ liệu:', error));
</script>


