@model Domain.Entities.HangHoa

@{
    ViewData["Title"] = "Thêm Hàng Hóa";
    Layout = null;
}

<div style="display: flex; justify-content: center;">
    <form asp-action="Create" method="post" style="border: 1px solid #ddd; padding: 20px; width: 60%; background-color: #fff;">
<h2>Thêm Hàng Hóa</h2>
    <div class="form-group">
        <label asp-for="TenHH" class="control-label">Tên hàng hóa</label>
        <input asp-for="TenHH" class="form-control" />
        <span asp-validation-for="TenHH" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaLoai" class="control-label">Mã loại</label>
        <select asp-for="MaLoai" class="form-control">
            @if (ViewBag.Loai != null)
            {
                @foreach (var loai in ViewBag.Loai as List<Domain.Entities.Loai>)
                {
                    <option value="@loai.MaLoai">@loai.TenLoai</option>
                }
            }
        </select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="DonGia" class="control-label">Đơn giá</label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hinh" class="control-label">Hình ảnh</label>
        <input asp-for="Hinh" class="form-control" />
        <span asp-validation-for="Hinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySX" class="control-label">Ngày sản xuất</label>
        <input asp-for="NgaySX" type="date" class="form-control" />
        <span asp-validation-for="NgaySX" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiamGia" class="control-label">Khuyến mãi</label>
        <input asp-for="GiamGia" class="form-control" />
        <span asp-validation-for="GiamGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLanXem" class="control-label">Số lần xem</label>
        <input asp-for="SoLanXem" class="form-control" />
        <span asp-validation-for="SoLanXem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTa" class="control-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Thêm Hàng Hóa" class="btn btn-primary" />
    </div>
</form>
</div>

<style>
    .btn-primary {
        width: 100%;
    }

    body {
        background-color: #f2f2f2;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }

        .form-group input[type="text"],
        .form-group input[type="date"],
        .form-group input[type="number"],
        .form-group input[type="email"],
        .form-group input[type="password"],
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-group input[type="submit"] {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }

            .form-group input[type="submit"]:hover {
                background-color: #0056b3;
            }

    .text-danger {
        color: red;
    }
</style>