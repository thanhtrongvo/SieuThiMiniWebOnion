@model Domain.Entities.NhapKho

@{
    ViewData["Title"] = "Thêm Nhập Kho";
    Layout = null;
}


<div style="display: flex; justify-content: center;">
    <form asp-action="Create" method="post" style="border: 1px solid #ddd; padding: 20px; width: 60%; background-color: #fff;">
<h2>Thêm Nhập Kho</h2>
    <div class="form-group">
        <label asp-for="MaNCC" class="control-label">Nhà Cung Cấp</label>
        <select asp-for="MaNCC" class="form-control">
            @foreach (var ncc in ViewBag.NhaCungCaps as List<Domain.Entities.NhaCungCap>)
            {
                <option value="@ncc.MaNCC">@ncc.TenNCC</option>
            }
        </select>
        <span asp-validation-for="MaNCC" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaHH" class="control-label">Hàng Hóa</label>
        <select asp-for="MaHH" class="form-control">
            @foreach (var hh in ViewBag.HangHoas as List<Domain.Entities.HangHoa>)
            {
                <option value="@hh.MaHH">@hh.TenHH</option>
            }
        </select>
        <span asp-validation-for="MaHH" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayNhap" class="control-label">Ngày nhập</label>
        <input asp-for="NgayNhap" type="date" class="form-control" />
        <span asp-validation-for="NgayNhap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong" class="control-label">Số lượng</label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaNhap" class="control-label">Giá nhập</label>
        <input asp-for="GiaNhap" class="form-control" />
        <span asp-validation-for="GiaNhap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Thêm Nhập Kho" class="btn btn-primary" />
    </div>
</form>
</div>
<style>
    .btn-primary {
        width: 100%;
    }

        body {
            background-color: #f2f2f2;
        }


        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            font-weight: bold;
        }
        .form-group input[type="text"],
        .form-group input[type="date"],
        .form-group input[type="number"],
        .form-group input[type="email"],
        .form-group input[type="password"],

        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .form-group input[type="submit"] {

                padding: 10px 20px;
                border: none;
                border-radius: 5px;

        background-color: #007bff;
        color: white;
        cursor: pointer;
        }
        .form-group input[type="submit"]:hover {
            background-color: #0056b3;
        }
        .text-danger {
            color: red;
        }
</style>