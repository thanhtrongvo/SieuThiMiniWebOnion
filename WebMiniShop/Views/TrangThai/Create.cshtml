@model Domain.Entities.TrangThai

@{
    ViewData["Title"] = "Thêm Trạng Thái";
}

<h2>Thêm Trạng Thái</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenTrangThai" class="control-label"></label>
        <input asp-for="TenTrangThai" class="form-control" />
        <span asp-validation-for="TenTrangThai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTa" class="control-label"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Thêm Trạng Thái" class="btn btn-primary" />
    </div>
</form>
