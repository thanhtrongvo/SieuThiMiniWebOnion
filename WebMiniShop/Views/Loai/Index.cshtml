@model IEnumerable<Domain.Entities.Loai>

@{
    ViewData["Title"] = "Danh Sách Loại Hàng Hóa";
}

<h2>Danh Sách Loại Hàng Hóa</h2>

<a href="@Url.Action("Create", "Loai")" class="btn btn-primary">Thêm Loại Hàng Hóa</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Mã Loại</th>
            <th>Tên Loại</th>
            <th>Mô Tả</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaLoai</td>
                <td>@item.TenLoai</td>
                <td>@item.MoTa</td>
                <td>
                    <a href="@Url.Action("Edit", "Loai", new { id = item.MaLoai })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "Loai", new { id = item.MaLoai })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
